{% extends 'base.html.twig' %}

{% block body %}
    {% for message in app.flashes('notice') %}
        <div class="alert alert-success">
            {{ message }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}

    <div class="card-group py-2">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    {{ user.fullName }}
                </h5>
            </div>
        </div>
    </div>

    <div class="card-group py-2">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    Followers
                </h5>
                <ul class="list-group list-group-flush">
                    {% for follower in user.followers %}
                        <li class="list-group-item">
                            <a href="{{ path('user_micro_posts', {'username': follower.username}) }}">
                                @{{ follower.username }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    Following
                </h5>
                <ul class="list-group list-group-flush">
                    {% for following in user.following %}
                        <li class="list-group-item">
                            <a href="{{ path('user_micro_posts', {'username': following.username}) }}">
                                @{{ following.username }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>

    <h6 class="border-bottom border-gray pb-2 mb-0">Recent Updates</h6>
    {% for post in posts %}
        {{ include('micro-post/raw-post.html.twig', {'post': post}) }}

        <small class="d-block text-right mt-3">
            {% if is_granted('edit', post) %}
                <a href="{{ path('micro_post_edit', {'id': post.id}) }}">Edit</a>
            {% endif %}
            {% if is_granted('delete', post) %}
                <a href="{{ path('micro_post_delete', {'id': post.id}) }}">Delete</a>
            {% endif %}
        </small>
    {% endfor %}
{% endblock %}