{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
    <p>ID {{ id }}</p>
    <h2>{{ post.title | upper}}</h2>
    <p>{{ post.text }}</p>
    <p>{{ post.date|date('H:i:s') }}</p>
    <p>{{ 1560 | price }}</p>
    <p>Current locale is : {{ locale }}</p>
    <p>{{ message }}</p>

    <p>Env : {{ app.environment }}</p>
    <p>User : {{ app.user }}</p>
    <p>Request : {{ app.request }}</p>
    <p>Session Started : {{ app.session.isStarted() }}</p>
    <p>Debug : {{ app.debug }}</p>
{% endblock %}
